<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="at.aau.gloryweapons.siegeanddestroy3d.game.activities.GameTurnsActivity">

        <GridLayout
            android:id="@+id/gridEnemyTurnBoard"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </GridLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/UserLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

                <Button
                    android:id="@+id/buttonApplyShots"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Zug beenden"
                    app:layout_constraintBottom_toTopOf="@+id/buttonCheaterSuspect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/buttonCheaterSuspect"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/cheaterSuspect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textViewUserTurn"
                    android:layout_width="180dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Fehler beim Laden"
                    app:layout_constraintBottom_toTopOf="@+id/buttonApplyShots"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

</LinearLayout>
